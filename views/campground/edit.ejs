<% include ../partials/header %>
<div class="container" style="align-items: center;">
	<div style="width:30%; margin:0 auto;">
		<h1> Edit a  <%=campground.name %> Campground </h1>
		<form action ="/campgrounds/<%= campground._id %>?_method=PUT" method="Post" > 
			<div class="form-group">
				<input  class="form-control" value="<%=campground.name %>" type="text" name="campground[name]" aria-describedby="emailHelp">
				<p>
				</p>
			</div>
			<div class="form-group">
				<input class="form-control"  value="<%= campground.price %>" type="number" name="campground[price]" min="0.01" step="0.01">
			</div>
		<div class="form-group">
			<input class="form-control" value="<%=campground.image %>" type="text" name="campground[image]">
		</div>
		<div class="form-group">
			<input class="form-control"  value="<%=campground.description %>" type="text" name="campground[description]">
		</div>

			<button type="submit" class="btn btn-primary btn-block">Update </button>
		</form>
	</div>
</div>
<p>
	
	
</p>

<% include ../partials/footer %>